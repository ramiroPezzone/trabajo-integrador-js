<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('head') %>
  <title>Document</title>
</head>

<body>

    
    <section class="contenedor-form-carga-de-prod contenedor-editar-prod">
      <div class="contenedor-titulo-editar">
      <h3>
          Editando <%= producto.name %>
      </h3>
    </div>
    <form action="/admins/guardar" method="post" class="form-carga-de-prod" enctype="multipart/form-data">
      <div class="item-form-carga-de-prod">
        <label for="nombre">
          <span>Nombre</span>
        </label>
        <input type="text" id="nombre" name="nombre" value="<%= producto.name %> " />
      </div>
      </div>
      <div class="item-form-carga-de-prod">
        <label for="categoria">
          <span>Selecciona una categoría</span>
        </label>
        <select name="categoria" id="categoria" value="<%= producto.brand %> ">
          <option value="panificados">Hamburguesas</option>
          <option value="factureria">Papas fritas</option>
          <option value="galletitas">Bebidas</option>
          <option value="alfajores">Postres</option>
          <option value="tortas">Especialidades</option>
        </select>
      </div>
      <div class="item-form-carga-de-prod">
        <label for="precio">
          <span>Precio (en $)</span>
        </label>
        <input type="number" id="precio" name="precio" min="0" step="0.01" value="100" />
      </div>
      <div class="item-form-carga-de-prod item-descr">
        <label for="descripcion descripcion-nvo-prod">
          <span>Descripción</span>
        </label>
        <textarea name="descripcion" id="descripcion" cols="30" rows="10"><%= producto.description %> </textarea>
        <div class="item-form-carga-de-prod">
          <label for="foto">
            <span>Cargar foto</span>
          </label>
          <img id="previsualizacionDeImagen" alt="" src="/images/<%= producto.images %>">
          <input type="file" id="foto" name="imagen" accept="image/*" />
        </div>
        <div class="item-form-carga-de-prod">
          <label for="idusuario">
            <span>Responsable</span>
          </label>
          <input type="text" id="idusuario">
        </div>
        <div class="item-form-carga-de-prod">
          <label for="contrasena">Password</label>
          <input type="password" name="contrasena" id="contrasena">
        </div>
        <div class="item-form-carga-de-prod btns">
          <button type="reset">Reiniciar</button>
          <button type="submit">Aceptar</button>
        </div>
    </form>
  </section>

  <script src="/js/previsualizarImagen.js"></script>
</body>

</html>